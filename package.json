{
  "name": "poe",
  "private": true,
  "version": "2025.11.220554",
  "type": "module",
  "main": "dist-electron/main.js",
  "build": {
    "appId": "com.poe.app",
    "productName": "POE",
    "directories": {
      "output": "dist-electron"
    },
    "files": [
      "dist/**/*",
      "dist-electron/**/*"
    ]
  },
  "scripts": {
    "dev": "npm run clean:nodebuild && npx @electron/rebuild && vite",
    "exec": "npm run clean:nodebuild && npm rebuild better-sqlite3 && npx tsx",
    "build": "tsc -b && vite build",
    "lint": "eslint .",
    "preview": "vite preview",
    "clean": "rm -rf dist dist-electron release",
    "clean:nodebuild": "rm -rf node_modules/better-sqlite3/build node_modules/sqlite-vec/build",
    "electron": "electron .",
    "electron:build": "npm run build && electron-builder",
    "electron:build:all": "npm run build && electron-builder --mac --win --linux",
    "electron:build:mac": "npm run build && electron-builder --mac",
    "electron:build:win": "npm run build && electron-builder --win",
    "electron:build:linux": "npm run build && electron-builder --linux",
    "electron:pack": "npm run build && electron-builder --dir",
    "set-version": "node scripts/set-version.js"
  },
  "dependencies": {
    "@emotion/react": "^11.14.0",
    "@emotion/styled": "^11.14.1",
    "@fontsource/roboto": "^5.2.8",
    "@monaco-editor/react": "^4.7.0",
    "@mui/icons-material": "^7.3.4",
    "@mui/material": "^7.3.4",
    "@types/js-yaml": "^4.0.9",
    "@types/react-syntax-highlighter": "^15.5.13",
    "@types/uuid": "^10.0.0",
    "axios": "^1.12.2",
    "better-sqlite3": "^12.4.1",
    "diff": "^8.0.2",
    "js-yaml": "^4.1.1",
    "lucide-react": "^0.545.0",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "react-markdown": "^10.1.0",
    "react-syntax-highlighter": "^16.1.0",
    "remark-gfm": "^4.0.1",
    "sqlite-vec": "^0.1.7-alpha.2",
    "uuid": "^13.0.0"
  },
  "devDependencies": {
    "@electron/rebuild": "^4.0.1",
    "@eslint/js": "^9.36.0",
    "@types/better-sqlite3": "^7.6.13",
    "@types/diff": "^7.0.2",
    "@types/glob": "^8.1.0",
    "@types/node": "^24.6.2",
    "@types/react": "^19.1.16",
    "@types/react-dom": "^19.1.9",
    "@vitejs/plugin-react": "^5.0.4",
    "electron": "^38.2.1",
    "electron-builder": "^26.0.12",
    "eslint": "^9.36.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.22",
    "globals": "^16.4.0",
    "react-router-dom": "^7.9.3",
    "typescript": "~5.9.3",
    "typescript-eslint": "^8.45.0",
    "vite": "^7.1.7",
    "vite-plugin-electron": "^0.29.0"
  }
}
